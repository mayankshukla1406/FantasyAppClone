<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@color/mycolor20"
    tools:context=".Fragment.Profile">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/logoprofile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo2"
            android:contentDescription="Logo" />
    <TextView
        android:id="@+id/txtprofilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/mycolor2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logoprofile"
        android:background="@drawable/profile"
        android:drawableStart="@drawable/ic_profile"
        />
    <TextView
        android:id="@+id/txtprofilenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/txtprofilename"
        android:textColor="@color/mycolor2"
        android:drawableStart="@drawable/ic_number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:background="@drawable/profile"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/txtprofileemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/txtprofilenumber"
        android:textColor="@color/mycolor2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/ic_mail"
        android:padding="10dp"
        android:background="@drawable/profile"
        android:layout_marginTop="15dp"
        />
        <Button
            android:id="@+id/btchangepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/mycolor6"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:layout_marginTop="340dp"
            android:visibility="visible"
            android:background="@drawable/customizebutton"
            />
        <EditText
            android:id="@+id/etOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mycolor2"
            android:background="@color/mycolor6"
            android:layout_below="@+id/logoprofile"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="OTP"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mycolor2"
            android:text="@string/verify"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/customizeidandusername"
            android:layout_margin="30dp"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_below="@+id/etOTP"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="70dp"
            android:background="@color/mycolor4"
            android:visibility="gone" />
        <EditText
            android:id="@+id/etnewpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mycolor2"
            android:background="@color/mycolor6"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="NewPassword"
            android:layout_marginTop="10dp"
            android:layout_below="@id/logoprofile"
            android:padding="15dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/etconfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mycolor2"
            android:background="@color/mycolor6"
            android:layout_marginStart="20dp"
            android:layout_below="@id/etnewpass"
            android:layout_marginEnd="20dp"
            android:hint="Confirm Password"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btconfirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mycolor2"
            android:text="Confirm "
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/customizeidandusername"
            android:layout_margin="25dp"
            android:padding="10dp"
            android:layout_below="@+id/etconfirmPass"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btsubscribeyoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mycolor6"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="400dp"
            android:text="@string/subscribe_our_youtube_channel"
            android:background="@drawable/youtube"
            android:layout_marginStart="65dp"
            android:padding="10dp"
            android:layout_marginEnd="70dp"
            />
        <Button
            android:id="@+id/btfollowInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btsubscribeyoutube"
            android:layout_marginTop="15dp"
            android:textColor="@color/mycolor6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/follow_us_on_instagram"
            android:background="@drawable/instagram"
            android:layout_marginStart="65dp"
            android:padding="10dp"
            android:layout_marginEnd="70dp"
            />
        <Button
            android:id="@+id/btlikefacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btfollowInstagram"
            android:layout_marginTop="15dp"
            android:textColor="@color/mycolor6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/like_our_facebook_page"
            android:background="@drawable/facebook"
            android:layout_marginStart="65dp"
            android:padding="10dp"
            android:layout_marginEnd="70dp"
            />
    </RelativeLayout>
</ScrollView>