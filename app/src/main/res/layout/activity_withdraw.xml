<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mycolor20"
    tools:context=".Activity.Withdraw">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/logoprofile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo2"
            android:contentDescription="Logo" />
        <TextView
            android:id="@+id/textforselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which method you want to choose?"
            android:layout_below="@id/logoprofile"
            android:textSize="20dp"
            android:textColor="@color/mycolor2"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/mycolor6"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btUPIselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPI"
            android:layout_below="@id/textforselect"
            android:textColor="@color/mycolor6"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="25dp"
            android:background="@color/mycolor4"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btbankaccountselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Account"
            android:layout_below="@id/btUPIselect"
            android:textColor="@color/mycolor6"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="20dp"
            android:background="@color/mycolor4"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/etUPI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="@string/enter_your_upi_id"
            android:layout_marginEnd="30dp"
            android:textColorHint="@color/mycolor2"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_below="@+id/logoprofile"
            android:layout_marginTop="40dp"
            android:background="@color/mycolor6"
            android:textColor="@color/mycolor2"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btconfirmupi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_below="@id/etUPI"
            android:textColor="@color/mycolor6"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="20dp"
            android:background="@color/mycolor4"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtRequestWithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Your request of Withdraw Accepted.You get your Money in 24 Hours"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            android:textColorHint="@color/mycolor2"
            android:padding="15dp"
            android:textSize="22sp"
            android:layout_below="@id/logoprofile"
            android:layout_marginTop="50dp"
            android:background="@color/mycolor6"
            android:textColor="@color/mycolor2"
            />
        <EditText
            android:id="@+id/etBAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="@string/enter_bank_account_holder_name"
            android:layout_marginEnd="30dp"
            android:textColorHint="@color/mycolor2"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_marginTop="130dp"
            android:background="@color/mycolor6"
            android:visibility="gone"
            android:textColor="@color/mycolor2"
            />
        <EditText
            android:id="@+id/etIFSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="@string/enter_ifsc_code"
            android:layout_marginEnd="30dp"
            android:textColorHint="@color/mycolor2"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_below="@+id/etconfirmBANu"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:background="@color/mycolor6"
            android:textColor="@color/mycolor2"
            />
        <EditText
            android:id="@+id/etBANu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="@string/enter_bank_account_number"
            android:layout_marginEnd="30dp"
            android:textColorHint="@color/mycolor2"
            android:padding="15dp"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_below="@+id/etBAN"
            android:layout_marginTop="50dp"
            android:inputType="number"
            android:background="@color/mycolor6"
            android:textColor="@color/mycolor2"
            />
        <EditText
            android:id="@+id/etconfirmBANu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="@string/confirm_account_number"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            android:textColorHint="@color/mycolor2"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_below="@+id/etBANu"
            android:layout_marginTop="50dp"
            android:inputType="number"
            android:background="@color/mycolor6"
            android:textColor="@color/mycolor2"
            />
        <Button
            android:id="@+id/btconfirbankaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:layout_below="@id/etIFSC"
            android:textColor="@color/mycolor6"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="20dp"
            android:background="@color/mycolor4"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:visibility="gone"
            />


    </RelativeLayout>

</ScrollView>